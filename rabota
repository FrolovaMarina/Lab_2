import time
from prettytable import PrettyTable
my_table = PrettyTable()
buffer_len = 1
count = 0
try:
    start = time.time()
    with open("C:/pythonProject/file.txt", "r") as file:
        print("Результат работы программы:")
        buffer = file.read(buffer_len)
        if not buffer:
            print("Файл пустой")
            exit()
        while True:
            line = file.read()
            if not line:
                break
            for c in line:
                if c.isdigit():
                    count = count + 1
            if count == 0:
                print("В тексте файла нет цифр")
                exit()
            my_table.field_names = ["Number", "Count"]
            for num in range(10):
                my_table.add_row([num, line.count(str(num))])
            print(my_table)
    finish = time.time()
    result = finish - start
    print("total:", count)
    print("Время выполнения программы: " + str(result) + " секунд.")
except FileNotFoundError:
    print("Файл не найден. Данного файла или каталога не существует.")
file.close()
