import time
buffer_len = 1
count = 0
try:
    start = time.time()
    with open("C:/pythonProject/file.txt", "r") as file:
        print("Результат работы программы:")
        buffer = file.read(buffer_len)
        if not buffer:
            print("Файл пустой")
            exit()
        while True:
            line = file.read()
            if not line:
                break
            for c in line:
                if c.isdigit():
                    count = count + 1
            if count == 0:
                print("В тексте файла нет цифр")
                exit()
            print("number " + "| count")
            for num in range(9):
                print(" ", num, "      ", line.count(str(num)))
    finish = time.time()
    result = finish - start
    print("total:", count)
    print("Время выполнения программы: " + str(round(result, 4)) + " секунд.")
except FileNotFoundError:
    print("Файл не найден. Данного файла или каталога не существует.")
file.close()
